---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/ui/Button.astro';

const services = await getCollection('services');

const bio =
  'Contador público con +10 años de experiencia optimizando procesos contables mediante tecnología y automatización.';
---

<Layout
  title="Links | Todoconta"
  description="Enlaces a recursos, servicios y asesorías de Todoconta."
>
  <section class="section-links">
    <div class="container">
      <div class="section-header fade-in-up">
        <img
          src="/images/photo.png"
          alt="Israel Castro"
          class="profile-photo fade-in-up"
        />
        <h2 class="section-title">Israel Castro</h2>
        <p class="section-subtitle fade-in-up">{bio}</p>
      </div>

      <div class="links">
        <Button href="/" variant="primary" size="lg">Asesoría en línea</Button>
        <Button href="/servicios" variant="outline" size="lg">
          Servicios contables
        </Button>
        <h2>Servicios adicionales</h2>
        {
          services.map(service => (
            <Button
              href={`/servicios/${service.slug}`}
              variant="outline"
              size="lg"
            >
              {service.data.title}
            </Button>
          ))
        }
      </div>

      <div class="substack-container">
        <h2>Suscríbete a nuestro newsletter</h2>
        <iframe
          src="https://todoconta.substack.com/embed"
          width="100%"
          height="150"
          style="border: none; overflow: hidden;"></iframe>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section-links {
    display: flex;
    justify-content: center;
    background: var(--color-background);
    padding: var(--space-8) 0;
  }

  .container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .section-header h2 {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    border: 3px solid var(--color-primary);
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    margin-bottom: 3rem;
  }

  .links h2 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .substack-container {
    width: 100%;
    max-width: 480px;
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
  }

  .substack-container h2 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: 1rem;
  }
</style>
