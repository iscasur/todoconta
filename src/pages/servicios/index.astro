---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Obtener todos los servicios
const services = await getCollection('services');
---

<Layout title="Servicios Especializados | Todoconta" description="Servicios especializados para necesidades específicas de tu empresa. Soluciones puntuales con la calidad y confianza de siempre.">
  <!-- Hero Section -->
  <section class="services-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Servicios Especializados</h1>
        <p class="hero-description">
          Servicios profesionales para necesidades específicas de tu empresa. Soluciones puntuales con la calidad y confianza de siempre.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="services-section">
    <div class="container">
      <div class="services-grid">
        {services.map(service => (
          <a href={`/servicios/${service.slug}`} class="service-card">
            <div class="service-icon">
              {service.data.icon}
            </div>
            <div class="service-content">
              <h3 class="service-title">{service.data.title}</h3>
              <p class="service-description">
                {service.data.shortDescription || service.data.description.substring(0, 120) + '...'}
              </p>
              <span class="service-link">Más información →</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Contact CTA -->
  <section class="contact-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">¿No encuentras el servicio que necesitas?</h2>
        <p class="cta-description">
          Contamos con una amplia variedad de servicios adicionales y podemos crear soluciones personalizadas para tu empresa.
        </p>
        <div class="cta-buttons">
          <a href="/contacto" class="btn btn-primary">Contáctanos</a>
          <a href="https://wa.me/5215544753602" class="btn btn-outline">Chat WhatsApp</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .services-hero {
    background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-800) 100%);
    color: white;
    padding: var(--space-16) 0;
    text-align: center;
  }
  
  .hero-title {
    font-size: var(--font-size-5xl);
    font-weight: 800;
    margin-bottom: var(--space-6);
  }
  
  .hero-description {
    font-size: var(--font-size-xl);
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
  }
  
  /* Services Grid */
  .services-section {
    padding: var(--space-16) 0;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-6);
  }
  
  .service-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-6);
    background-color: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    text-decoration: none;
    color: inherit;
    height: 100%;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .service-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }
  
  .service-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .service-title {
    font-family: var(--font-display);
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-2);
  }
  
  .service-description {
    color: var(--neutral-600);
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }
  
  .service-link {
    color: var(--primary-600);
    font-weight: 600;
    font-size: var(--font-size-sm);
    display: inline-block;
    transition: transform var(--transition-normal);
  }
  
  .service-card:hover .service-link {
    transform: translateX(5px);
  }
  
  /* Contact CTA */
  .contact-cta {
    background-color: var(--neutral-50);
    padding: var(--space-16) 0;
    text-align: center;
  }
  
  .cta-content {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: var(--space-4);
  }
  
  .cta-description {
    font-size: var(--font-size-lg);
    color: var(--neutral-600);
    margin-bottom: var(--space-8);
  }
  
  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-buttons {
      flex-direction: column;
      gap: var(--space-3);
    }
    
    .btn {
      width: 100%;
    }
  }
</style>