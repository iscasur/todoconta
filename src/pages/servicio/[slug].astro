      --neutral-200: #e7e5e4;
      --neutral-300: #d6d3d1;
      --neutral-400: #a8a29e;
      --neutral-500: #78716c;
      --neutral-600: #57534e;
      --neutral-700: #44403c;
      --neutral-800: #292524;
      --neutral-900: #1c1917;
      
      --font-primary: 'Inter', sans-serif;
      --font-display: 'Plus Jakarta Sans', sans-serif;
      
      --space-1: 0.25rem;
      --space-2: 0.5rem;
