  <script>
    // Funcionalidad para cambiar entre precios mensuales y anuales
    document.addEventListener('DOMContentLoaded', () => {
      const pricingOptions = document.querySelectorAll('.pricing-option');
      const monthlyPlan = document.getElementById('monthly-plan');
      const yearlyPlan = document.getElementById('yearly-plan');
      
      if (pricingOptions.length > 0 && monthlyPlan && yearlyPlan) {
        pricingOptions.forEach(option => {
          option.addEventListener('click', () => {
            // Remover clase active de todas las opciones
            pricingOptions.forEach(opt => opt.classList.remove('active'));
            
            // AÃ±adir clase active a la opciÃ³n seleccionada
            option.classList.add('active');
            
            // Mostrar plan correspondiente
            const plan = option.getAttribute('data-plan');
            if (plan === 'monthly') {
              monthlyPlan.style.display = 'block';
              yearlyPlan.style.display = 'none';
            } else {
              monthlyPlan.style.display = 'none';
              yearlyPlan.style.display = 'block';
            }
          });
        });
      }
      
      const faqQuestions = document.querySelectorAll('.faq-question');

      faqQuestions.forEach(question => {
        question.addEventListener('click', () => {
          const isExpanded = question.getAttribute('aria-expanded') === 'true';
          const answer = question.nextElementSibling;
          
          // Cerrar todas las respuestas primero
          faqQuestions.forEach(q => {
            if (q !== question) {
              q.setAttribute('aria-expanded', 'false');
              q.nextElementSibling.style.maxHeight = '0';
              // Actualizar el icono
              const icon = q.querySelector('.question-icon');
              if (icon) icon.textContent = '+';
            }
          });
          
          // Cambiar estado de la pregunta actual
          question.setAttribute('aria-expanded', !isExpanded);
          
          // Actualizar altura mÃ¡xima e icono
          if (!isExpanded) {
            // El valor 1000px es seguro para contener la mayorÃ­a de los textos
            // pero podrÃ­as calcularlo de forma dinÃ¡mica si es necesario
            answer.style.maxHeight = '1000px';
            const icon = question.querySelector('.question-icon');
