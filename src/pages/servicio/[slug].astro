    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: var(--font-primary);
      line-height: 1.6;
      color: var(--neutral-700);
      background-color: white;
    }
    
    img {
      max-width: 100%;
      height: auto;
      display: block;
    }
    
    a {
      color: var(--primary-600);
      text-decoration: none;
      transition: color 0.2s ease;
    }
    
    a:hover {
      color: var(--primary-700);
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: var(--font-display);
      color: var(--neutral-900);
      line-height: 1.2;
    }
    
    h1 {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: var(--space-6);
    }
    
    h2 {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: var(--space-5);
    }
    
    h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: var(--space-4);
    }
    
    p {
      margin-bottom: var(--space-4);
    }
    
    ul {
      list-style-position: inside;
      margin-bottom: var(--space-4);
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--space-4);
    }
    
    .header {
      background-color: white;
      padding: var(--space-4) 0;
      border-bottom: 1px solid var(--neutral-200);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    .header .container {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .logo {
      font-family: var(--font-display);
      font-weight: 700;
      font-size: 1.5rem;
      color: var(--neutral-900);
    }
    
    .nav ul {
      display: flex;
      list-style: none;
      gap: var(--space-6);
      margin: 0;
    }
    
    .nav a {
      font-weight: 500;
      color: var(--neutral-700);
    }
    
    .nav a:hover {
      color: var(--primary-600);
    }
    
    .breadcrumbs {
      background-color: var(--neutral-100);
      padding: var(--space-3) 0;
      border-bottom: 1px solid var(--neutral-200);
    }
    
    .breadcrumbs ul {
      display: flex;
      list-style: none;
      gap: var(--space-2);
      margin: 0;
    }
    
    .breadcrumbs li:not(:last-child)::after {
      content: '/';
      margin-left: var(--space-2);
      color: var(--neutral-400);
    }
    
    .breadcrumbs li:last-child {
      color: var(--neutral-700);
      font-weight: 500;
    }
    
    .section {
      padding: var(--space-16) 0;
    }
    
    .section-title {
      text-align: center;
      margin-bottom: var(--space-10);
    }
    
    .section-subtitle {
      text-align: center;
      max-width: 700px;
      margin: 0 auto var(--space-10);
      color: var(--neutral-600);
      font-size: 1.125rem;
    }
    
    .text-center {
      text-align: center;
    }
    
    /* Hero Section */
    .hero {
      padding: var(--space-16) 0;
      background-color: var(--neutral-50);
      position: relative;
      overflow: hidden;
    }
    
    .hero-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
      align-items: center;
    }
    
    .hero-badge {
      display: inline-block;
      background-color: var(--primary-600);
      color: white;
      font-size: 0.75rem;
      font-weight: 600;
      padding: var(--space-1) var(--space-3);
      border-radius: var(--border-radius-full);
      margin-bottom: var(--space-4);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    .hero-description {
      color: var(--neutral-600);
      margin-bottom: var(--space-6);
      font-size: 1.125rem;
    }
    
    .hero-recommended {
      background-color: white;
      padding: var(--space-4);
      border-radius: var(--border-radius-lg);
      margin-bottom: var(--space-6);
      border: 1px solid var(--neutral-200);
    }
    
    .hero-recommended strong {
      display: block;
      margin-bottom: var(--space-1);
      color: var(--neutral-800);
    }
    
    .hero-actions {
      display: flex;
      gap: var(--space-4);
      margin-bottom: var(--space-8);
    }
    
    .btn {
      display: inline-block;
      padding: var(--space-3) var(--space-6);
      border-radius: var(--border-radius-lg);
      font-weight: 600;
      font-family: var(--font-display);
      transition: all 0.2s;
      text-align: center;
    }
    
    .btn-primary {
      background-color: var(--primary-600);
      color: white;
    }
    
    .btn-primary:hover {
      background-color: var(--primary-700);
      color: white;
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
    
    .btn-outline {
      border: 2px solid var(--primary-600);
      color: var(--primary-600);
      background-color: transparent;
    }
    
    .btn-outline:hover {
      background-color: var(--primary-50);
      transform: translateY(-2px);
    }
    
    .hero-image {
      border-radius: var(--border-radius-2xl);
      overflow: hidden;
      box-shadow: var(--shadow-lg);
    }
    
    .hero-image img {
      width: 100%;
      height: auto;
    }
    
    /* Pricing Section */
    .pricing {
      background-color: var(--neutral-50);
      padding: var(--space-16) 0;
      position: relative;
      overflow: hidden;
    }
    
    .pricing::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23000000' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      opacity: 0.5;
    }
    
    .pricing-options {
      background-color: white;
      border-radius: var(--border-radius-lg);
      padding: var(--space-1);
      display: flex;
      max-width: 300px;
      margin: 0 auto var(--space-10);
      border: 1px solid var(--neutral-200);
    }
    
    .pricing-option {
      flex: 1;
      padding: var(--space-2) var(--space-4);
      text-align: center;
      cursor: pointer;
      border-radius: var(--border-radius-md);
      font-weight: 500;
      transition: background-color 0.2s;
    }
    
    .pricing-option.active {
      background-color: var(--primary-600);
      color: white;
    }
    
    .pricing-cards {
      position: relative;
      z-index: 1;
    }
    
    .pricing-card {
      background-color: white;
      border-radius: var(--border-radius-2xl);
      padding: var(--space-8);
      max-width: 500px;
      margin: 0 auto;
      box-shadow: var(--shadow-lg);
      position: relative;
      overflow: hidden;
    }
    
    .pricing-card.featured {
      border: 2px solid var(--primary-500);
    }
    
    .pricing-card.featured::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-500), var(--primary-700));
    }
    
    .pricing-title {
      text-align: center;
      margin-bottom: var(--space-6);
    }
    
    .pricing-amount {
      font-family: var(--font-display);
      font-size: 3rem;
      font-weight: 800;
      color: var(--primary-700);
      text-align: center;
      margin-bottom: var(--space-2);
    }
    
    .pricing-period {
      text-align: center;
      color: var(--neutral-500);
      margin-bottom: var(--space-6);
    }
    
    .feature-list {
      list-style: none;
      margin-bottom: var(--space-8);
    }
    
    .feature-item {
      display: flex;
      align-items: flex-start;
      gap: var(--space-3);
      margin-bottom: var(--space-3);
      padding-bottom: var(--space-3);
      border-bottom: 1px dashed var(--neutral-200);
    }
    
    .feature-item:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }
    
    .feature-icon {
      color: var(--green-500);
      flex-shrink: 0;
      font-size: 1.25rem;
    }
    
    .cta-button {
      display: block;
      background-color: var(--primary-600);
      color: white;
      text-align: center;
      padding: var(--space-4);
      border-radius: var(--border-radius-lg);
      font-weight: 600;
      font-size: 1.125rem;
      font-family: var(--font-display);
      transition: all 0.2s;
    }
    
    .cta-button:hover {
      background-color: var(--primary-700);
      color: white;
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
    
    /* Categories Section */
    .categories {
      padding: var(--space-16) 0;
    }
    
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-6);
    }
    
    .category-card {
      background-color: white;
      border-radius: var(--border-radius-xl);
      padding: var(--space-6);
      box-shadow: var(--shadow-md);
      border: 1px solid var(--neutral-200);
      height: 100%;
    }
    
    .category-title {
      font-family: var(--font-display);
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--neutral-900);
      padding-bottom: var(--space-3);
      margin-bottom: var(--space-4);
      border-bottom: 1px solid var(--neutral-200);
    }
    
    .category-features {
      list-style: none;
    }
    
    .category-feature {
      display: flex;
      align-items: center;
      padding: var(--space-2) 0;
      border-bottom: 1px dashed var(--neutral-200);
    }
    
    .category-feature:last-child {
      border-bottom: none;
    }
    
    .feature-status {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: var(--space-3);
      flex-shrink: 0;
      font-size: 0.75rem;
      font-weight: bold;
    }
    
    .status-included {
      background-color: var(--green-100);
      color: var(--green-600);
    }
    
    .status-excluded {
      background-color: var(--neutral-200);
      color: var(--neutral-500);
    }
    
    .feature-info {
      display: flex;
      align-items: center;
      position: relative;
    }
    
    .feature-tooltip {
      margin-left: var(--space-2);
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background-color: var(--neutral-200);
      color: var(--neutral-600);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.7rem;
      font-weight: bold;
      cursor: help;
      position: relative;
    }
    
    .feature-tooltip::before {
      content: attr(data-tooltip);
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      background-color: var(--neutral-800);
      color: white;
      text-align: center;
      padding: var(--space-2) var(--space-3);
      border-radius: var(--border-radius-md);
      font-size: 0.75rem;
      white-space: nowrap;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.2s, visibility 0.2s;
      z-index: 10;
      margin-bottom: var(--space-2);
      pointer-events: none;
    }
    
    .feature-tooltip:hover::before {
      opacity: 1;
      visibility: visible;
    }
    
    /* Testimonials Section */
    .testimonials {
      background-color: var(--primary-50);
      padding: var(--space-16) 0;
    }
    
    .testimonials-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-6);
    }
    
    .testimonial-card {
      background-color: white;
      border-radius: var(--border-radius-xl);
      padding: var(--space-6);
      box-shadow: var(--shadow-md);
      position: relative;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .quote-icon {
      position: absolute;
      top: var(--space-4);
      left: var(--space-4);
      font-size: 3rem;
      line-height: 1;
      color: var(--primary-200);
      font-family: serif;
      font-weight: bold;
      opacity: 0.5;
    }
    
    .testimonial-quote {
      padding-top: var(--space-6);
      margin-bottom: var(--space-6);
      font-style: italic;
      color: var(--neutral-700);
      flex-grow: 1;
    }
    
    .testimonial-author {
      display: flex;
      align-items: center;
      border-top: 1px solid var(--neutral-200);
      padding-top: var(--space-4);
      margin-top: auto;
    }
    
    .author-avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      overflow: hidden;
      margin-right: var(--space-3);
      flex-shrink: 0;
    }
    
    .author-name {
      font-weight: 600;
      color: var(--neutral-900);
      margin-bottom: var(--space-1);
      font-size: 1rem;
    }
    
    .author-position {
      color: var(--neutral-500);
      font-size: 0.875rem;
    }
    
    /* Process Section */
    .process {
      padding: var(--space-16) 0;
    }
    
    .process-steps {
      position: relative;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .process-steps::before {
      content: '';
      position: absolute;
      left: 24px;
      top: 0;
      bottom: 0;
      width: 2px;
      background-color: var(--primary-100);
      z-index: 0;
    }
    
    .process-step {
      position: relative;
      padding-left: 64px;
      margin-bottom: var(--space-10);
    }
    
    .process-step:last-child {
      margin-bottom: 0;
    }
    
    .step-number {
      position: absolute;
      left: 0;
      top: 0;
      width: 48px;
      height: 48px;
      background-color: var(--primary-600);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 1.25rem;
      z-index: 1;
      box-shadow: var(--shadow-md);
    }
    
    .step-content {
      background-color: white;
      border-radius: var(--border-radius-xl);
      padding: var(--space-6);
      box-shadow: var(--shadow-md);
      border: 1px solid var(--neutral-200);
    }
    
    .step-icon {
      font-size: 2rem;
      margin-bottom: var(--space-3);
    }
    
    .step-title {
      font-size: 1.25rem;
      margin-bottom: var(--space-3);
    }
    
    /* Stats Section */
    .stats {
      background-color: var(--primary-600);
      color: white;
      padding: var(--space-12) 0;
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-8);
      text-align: center;
    }
    
    .stat-item {
      padding: var(--space-4);
    }
    
    .stat-value {
      font-family: var(--font-display);
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: var(--space-2);
      line-height: 1;
    }
    
    .stat-label {
      font-size: 1.125rem;
      font-weight: 500;
      margin-bottom: var(--space-2);
      opacity: 0.9;
    }
    
    .stat-description {
      font-size: 0.875rem;
      opacity: 0.7;
    }
    
    /* FAQ Section */
    .faq {
      padding: var(--space-16) 0;
    }

    .faq-items {
      max-width: 800px;
      margin: 0 auto;
    }

    .faq-item {
      border-bottom: 1px solid var(--neutral-200);
      margin-bottom: var(--space-4);
    }

    .faq-question {
      font-family: var(--font-display);
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--neutral-900);
      padding: var(--space-4) 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      transition: color 0.2s;
      width: 100%;
      background: transparent;
      border: none;
      text-align: left;
    }

    .faq-question:hover {
      color: var(--primary-600);
    }

    .question-icon {
      font-size: 1.5rem;
      color: var(--primary-600);
      transition: transform 0.3s;
      margin-left: var(--space-2);
      min-width: 24px;
      text-align: center;
    }

    .faq-question[aria-expanded="true"] .question-icon {
      transform: rotate(45deg);
    }

    .faq-answer {
      padding: 0;
      color: var(--neutral-600);
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.5s ease-out, padding 0.3s ease-out;
    }

    .faq-question[aria-expanded="true"] + .faq-answer {
      padding-bottom: var(--space-4);
    }
    
    /* CTA Section */
    .cta {
      background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-800) 100%);
      color: white;
      padding: var(--space-16) 0;
