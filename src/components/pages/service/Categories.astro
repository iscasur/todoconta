---
// src/components/service/Categories.astro
export interface Props {
  categories: Array<{
    title: string;
    features: Array<{
      text: string;
      included: boolean;
      tooltip?: string;
    }>;
  }>;
}

const { categories } = Astro.props;
---

<section class="categories-section">
  <div class="container">
    <h2 class="section-title text-center animate-fade-in-up">
      ¿Qué Incluye Nuestro Servicio?
    </h2>
    <p class="section-subtitle text-center animate-fade-in-up delay-100">
      Conoce a detalle todo lo que obtendrás al contratar nuestro servicio
    </p>

    <div class="categories-container">
      {
        categories.map((category, index) => (
          <div
            class={`category-card animate-fade-in-up delay-${200 + index * 100}`}
          >
            <h3 class="category-title">{category.title}</h3>

            <ul class="category-features">
              {category.features.map(feature => (
                <li
                  class={`feature-item ${feature.included ? 'included' : 'excluded'}`}
                >
                  <span class="feature-icon">
                    {feature.included ? '✓' : '✕'}
                  </span>
                  <span class="feature-text">
                    {feature.text}
                    {feature.tooltip && (
                      <span
                        class="feature-tooltip"
                        data-tooltip={feature.tooltip}
                      >
                        <span class="tooltip-icon">i</span>
                      </span>
                    )}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .categories-section {
    padding: var(--space-20) 0;
    background-color: var(--color-white);
  }

  .text-center {
    text-align: center;
  }

  .section-title {
    font-family: var(--font-secondary);
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto var(--space-12);
  }

  .categories-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }

  .category-card {
    background-color: var(--color-white);
    border-radius: var(--border-radius-xl);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-primary-light);
    height: 100%;
  }

  .category-title {
    font-family: var(--font-secondary);
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-text-primary);
    padding-bottom: var(--space-3);
    margin-bottom: var(--space-5);
    border-bottom: 1px solid var(--color-primary-light);
  }

  .category-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: var(--space-3);
    padding-bottom: var(--space-3);
    border-bottom: 1px dashed var(--color-primary-light);
  }

  .feature-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: var(--space-3);
    font-size: var(--font-size-sm);
    font-weight: bold;
  }

  .feature-item.included .feature-icon {
    background-color: var(--green-100);
    color: var(--color-primary);
  }

  .feature-item.excluded .feature-icon {
    background-color: var(--color-primary-light);
    color: var(--color-white);
  }

  .feature-text {
    color: var(--color-text-primary);
    font-size: var(--font-size-base);
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .feature-item.excluded .feature-text {
    color: var(--color-white);
    text-decoration: line-through;
  }

  .feature-tooltip {
    position: relative;
    display: inline-block;
  }

  .tooltip-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: var(--color-primary-light);
    color: var(--color-primary);
    font-size: var(--font-size-xs);
    font-style: italic;
    font-weight: bold;
    cursor: help;
  }

  .feature-tooltip:hover::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--neutral-800);
    color: var(--color-white);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--border-radius-md);
    font-size: var(--font-size-xs);
    white-space: nowrap;
    z-index: 10;
    margin-bottom: var(--space-2);
    box-shadow: var(--shadow-md);
  }

  .feature-tooltip:hover::before {
    content: '';
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    border-width: 5px;
    border-style: solid;
    border-color: var(--neutral-800) transparent transparent transparent;
    margin-bottom: -5px;
    z-index: 11;
  }

  @media (max-width: 768px) {
    .categories-section {
      padding: var(--space-16) 0;
    }

    .categories-container {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: var(--font-size-2xl);
    }

    .section-subtitle {
      font-size: var(--font-size-base);
    }
  }
</style>
