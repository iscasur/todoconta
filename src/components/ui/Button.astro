---
const { 
  variant = "primary", 
  size = "default", 
  href, 
  class: className, 
  ...props 
} = Astro.props;

const variantClasses = {
  primary: "btn-primary",
  secondary: "btn-secondary",
  accent: "btn-accent",
  outline: "btn-outline"
};

const sizeClasses = {
  sm: "btn-sm",
  default: "",
  lg: "btn-lg",
  xl: "btn-xl"
};

const classes = [
  "btn",
  variantClasses[variant],
  sizeClasses[size],
  className
].join(" ");
---

{
  href ? (
    <a href={href} class={classes} {...props}>
      <slot />
    </a>
  ) : (
    <button class={classes} {...props}>
      <slot />
    </button>
  )
}
