---
export interface Props {
  title?: string;
  subtitle?: string;
  faqs: Array<{
    question: string;
    answer: string;
  }>;
  variant?: 'default' | 'compact' | 'card';
  autoOpenFirst?: boolean;
}

const {
  title = 'Preguntas Frecuentes',
  subtitle = 'Resolvemos tus dudas más comunes',
  faqs,
  variant = 'default',
} = Astro.props;
---

<section class={`faq-section faq-${variant}`} id="faq">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title animate-fade-in-up">{title}</h2>
      {
        subtitle && (
          <p class="section-subtitle animate-fade-in-up delay-100">
            {subtitle}
          </p>
        )
      }
    </div>

    <div class="faq-container">
      {
        faqs.map((faq, index) => (
          <div
            class={`faq-item animate-fade-in-up delay-${(index % 4) * 100 + 200}`}
          >
            <button class="faq-question" aria-expanded="false">
              <span class="question-text">{faq.question}</span>
              <span class="question-icon">+</span>
            </button>
            <div class="faq-answer">
              <div class="answer-content">{faq.answer}</div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  import { initFAQ } from '../../scripts/accordion.js';

  initFAQ('.faq-section');
</script>

<style>
  /* Base styles - aplicables a todas las variantes */
  .faq-section {
    padding: var(--space-16) 0;
  }

  .faq-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    overflow: hidden;
  }

  .faq-question {
    width: 100%;
    text-align: left;
    background: none;
    border: none;
    padding: var(--space-5) 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font-secondary);
    font-weight: 600;
    font-size: var(--font-size-lg);
    color: var(--color-text-primary);
    transition: all var(--transition-normal);
  }

  .faq-question:hover {
    color: var(--color-primary);
  }

  .question-icon {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    font-weight: 400;
    line-height: 1;
    margin-left: var(--space-4);
    transition: transform var(--transition-normal);
  }

  .faq-question[aria-expanded='true'] .question-icon {
    transform: rotate(180deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .answer-content {
    color: var(--color-text-secondary);
    padding-bottom: var(--space-5);
    line-height: 1.6;
  }

  /* Variante Default - estilo simple con líneas */
  .faq-default .faq-item {
    border-bottom: 1px solid var(--color-primary-light);
  }

  .faq-default .faq-question {
    padding: var(--space-5) 0;
  }

  /* Variante Compact - espaciado reducido */
  .faq-compact {
    padding: var(--space-10) 0;
  }

  .faq-compact .faq-question {
    padding: var(--space-4) 0;
    font-size: var(--font-size-base);
  }

  .faq-compact .answer-content {
    padding-bottom: var(--space-4);
  }

  /* Variante Card - estilo tarjetas con bordes */
  .faq-card .faq-section {
    padding: var(--space-20) 0;
    background-color: var(--color-white);
  }

  .faq-card .faq-item {
    background-color: white;
    border-radius: var(--border-radius-lg);
    margin-bottom: var(--space-4);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-primary-light);
  }

  .faq-card .faq-question {
    padding: var(--space-5) var(--space-6);
    transition: background-color var(--transition-normal);
  }

  .faq-card .faq-question:hover {
    background-color: var(--neutral-100);
  }

  .faq-card .faq-question[aria-expanded='true'] {
    border-bottom: 1px solid var(--color-primary-light);
    background-color: var(--color-white);
  }

  .faq-card .answer-content {
    padding: var(--space-5) var(--space-6);
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .faq-section {
      padding: var(--space-16) 0;
    }

    .section-title {
      font-size: var(--font-size-2xl);
    }

    .section-subtitle {
      font-size: var(--font-size-base);
    }

    .faq-question {
      font-size: var(--font-size-base);
      padding: var(--space-4) 0;
    }

    .faq-card .faq-question {
      padding: var(--space-4) var(--space-4);
      font-size: var(--font-size-base);
    }

    .faq-card .answer-content {
      padding: var(--space-4);
    }
  }
</style>
