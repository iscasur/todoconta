---
export interface Props {
  product: any;
}

const { product } = Astro.props;
const { data, slug } = product;
---

<a href={`/producto/${slug}`} class="product-card fade-in-up">
  <div class="product-image-container">
    <img src={data.heroImage} alt={data.title} class="product-image" />
    <div class="product-badge">{data.badge}</div>
  </div>
  <div class="product-content">
    <h3 class="product-title">{data.title}</h3>
    <p class="product-description">{data.description}</p>
    <div class="product-price-container">
      <span class="product-price">${data.price}</span>
      <span class="product-price-period">{data.pricePeriod}</span>
    </div>
    <div class="product-cta">Ver m√°s detalles</div>
  </div>
</a>

<style>
  .product-card {
    display: block;
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    border: 2px solid var(--color-border);
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }

  .product-image-container {
    position: relative;
  }

  .product-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .product-badge {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    background: var(--color-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius-sm);
    font-size: 14px;
    font-weight: 600;
  }

  .product-content {
    padding: var(--space-6);
  }

  .product-title {
    font-family: var(--font-secondary);
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: var(--space-3);
  }

  .product-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    font-size: 15px;
    line-height: 1.6;
  }

  .product-price-container {
    margin-bottom: var(--space-4);
  }

  .product-price {
    font-family: var(--font-secondary);
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-primary);
  }

  .product-price-period {
    color: var(--color-text-secondary);
    font-size: 14px;
    margin-left: var(--space-2);
  }

  .product-cta {
    font-weight: 600;
    color: var(--color-primary);
    text-align: right;
  }
</style>
