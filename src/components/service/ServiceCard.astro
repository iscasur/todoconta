---
export interface Props {
  title: string;
  description: string;
  price: number;
  priceNote?: string;
  badge?: string;
  featured?: boolean;
  recommendedFor: string;
  features: Array<{
    icon: string;
    text: string;
    included: boolean;
  }>;
  ctaText: string;
  ctaUrl: string;
  slug: string;
}

const { 
  title, 
  description, 
  price,
  priceNote,
  badge,
  featured = false,
  recommendedFor,
  features,
  ctaText,
  ctaUrl,
  slug
} = Astro.props;

// FunciÃ³n para formatear el precio
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN',
    maximumFractionDigits: 0
  }).format(price);
};
---

<div class={`service-card ${featured ? 'featured' : ''}`}>
  {badge && <span class="service-badge">{badge}</span>}
  
  <h3 class="service-title">{title}</h3>
  <p class="service-description">{description}</p>
  
  <div class="service-price">
    <span class="price-amount">{formatPrice(price)}</span>
    {priceNote && <span class="price-note">/ {priceNote}</span>}
  </div>
  
  <div class="service-recommended">
    <span class="recommended-icon">ðŸ‘¥</span>
    <span class="recommended-text">Recomendado para:</span>
    <p class="recommended-description">{recommendedFor}</p>
  </div>
  
  <div class="service-features">
    {features.map(feature => (
      <div class="service-feature">
        <span class="feature-icon">{feature.icon}</span>
        <span class="feature-text">{feature.text}</span>
      </div>
    ))}
  </div>
  
  <div class="service-actions">
    <a href={ctaUrl} class="service-cta">{ctaText}</a>
    <a href={`/servicio/${slug}`} class="service-details">Ver detalles</a>
  </div>
</div>

<style>
  .service-card {
    background-color: white;
    border-radius: var(--border-radius-xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--neutral-200);
  }
  
  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .service-card.featured {
    border: 2px solid var(--primary-500);
  }
  
  .service-badge {
    position: absolute;
    top: -12px;
    right: var(--space-6);
    background-color: var(--primary-600);
    color: white;
    font-size: var(--font-size-xs);
    font-weight: 600;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--border-radius-full);
    z-index: 1;
  }
  
  .service-title {
    font-family: var(--font-display);
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: var(--space-2);
  }
  
  .service-description {
    color: var(--neutral-600);
    margin-bottom: var(--space-6);
  }
  
  .service-price {
    margin-bottom: var(--space-6);
  }
  
  .price-amount {
    font-family: var(--font-display);
    font-size: var(--font-size-3xl);
    font-weight: 800;
    color: var(--primary-700);
  }
  
  .price-note {
    font-size: var(--font-size-sm);
    color: var(--neutral-500);
  }
  
  .service-recommended {
    background-color: var(--neutral-100);
    border-radius: var(--border-radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-6);
  }
  
  .recommended-icon {
    margin-right: var(--space-2);
  }
  
  .recommended-text {
    font-weight: 600;
    color: var(--neutral-700);
    display: block;
    margin-bottom: var(--space-1);
  }
  
  .recommended-description {
    color: var(--neutral-600);
    font-size: var(--font-size-sm);
    margin: 0;
  }
  
  .service-features {
    margin-bottom: var(--space-6);
    flex-grow: 1;
  }
  
  .service-feature {
    display: flex;
    align-items: center;
    margin-bottom: var(--space-3);
  }
  
  .feature-icon {
    margin-right: var(--space-3);
    color: var(--primary-600);
    font-size: var(--font-size-lg);
    width: 24px;
    text-align: center;
  }
  
  .feature-text {
    color: var(--neutral-700);
  }
  
  .service-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-top: auto;
  }
  
  .service-cta {
    background-color: var(--primary-600);
    color: white;
    text-align: center;
    padding: var(--space-3) var(--space-4);
    border-radius: var(--border-radius-lg);
    font-family: var(--font-display);
    font-weight: 600;
    text-decoration: none;
    transition: background-color var(--transition-normal);
  }
  
  .service-cta:hover {
    background-color: var(--primary-700);
  }
  
  .service-details {
    text-align: center;
    color: var(--primary-600);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-normal);
  }
  
  .service-details:hover {
    color: var(--primary-700);
    text-decoration: underline;
  }
</style>