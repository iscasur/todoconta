---
// src/components/service/Process.astro
export interface Props {
  steps: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
}

const { steps } = Astro.props;
---

<section class="process-section">
  <div class="container">
    <h2 class="section-title text-center animate-fade-in-up">Cómo Funciona Nuestro Proceso</h2>
    <p class="section-subtitle text-center animate-fade-in-up delay-100">
      Conoce el paso a paso de nuestra metodología de trabajo
    </p>
    
    <div class="process-timeline">
      {steps.map((step, index) => (
        <div class={`process-step animate-fade-in-up delay-${200 + index * 100}`}>
          <div class="step-number">{index + 1}</div>
          
          <div class="step-content">
            <div class="step-icon">{step.icon}</div>
            <h3 class="step-title">{step.title}</h3>
            <p class="step-description">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .process-section {
    padding: var(--space-20) 0;
    background-color: white;
  }
  
  .text-center {
    text-align: center;
  }
  
  .section-title {
    font-family: var(--font-display);
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: var(--space-4);
  }
  
  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--neutral-600);
    max-width: 700px;
    margin: 0 auto var(--space-12);
  }
  
  .process-timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .process-timeline::before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 24px;
    width: 2px;
    background-color: var(--primary-200);
    z-index: 1;
  }
  
  .process-step {
    position: relative;
    margin-bottom: var(--space-10);
    padding-left: var(--space-16);
  }
  
  .process-step:last-child {
    margin-bottom: 0;
  }
  
  .process-step:last-child::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 24px;
    width: 2px;
    background-color: white;
    height: calc(100% - 50px);
    z-index: 2;
  }
  
  .step-number {
    position: absolute;
    left: 0;
    top: 0;
    width: 50px;
    height: 50px;
    background-color: var(--primary-600);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-weight: bold;
    font-size: var(--font-size-xl);
    z-index: 3;
    box-shadow: var(--shadow-md);
  }
  
  .step-content {
    background-color: var(--neutral-50);
    border-radius: var(--border-radius-xl);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--neutral-200);
  }
  
  .step-icon {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-3);
  }
  
  .step-title {
    font-family: var(--font-display);
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-3);
  }
  
  .step-description {
    color: var(--neutral-700);
    line-height: 1.6;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .process-section {
      padding: var(--space-16) 0;
    }
    
    .section-title {
      font-size: var(--font-size-2xl);
    }
    
    .section-subtitle {
      font-size: var(--font-size-base);
    }
    
    .process-step {
      padding-left: var(--space-12);
    }
    
    .step-number {
      width: 40px;
      height: 40px;
      font-size: var(--font-size-lg);
    }
    
    .process-timeline::before {
      left: 19px;
    }
    
    .process-step:last-child::before {
      left: 19px;
    }
  }
</style>