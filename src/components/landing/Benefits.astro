---
export interface Props {
  title?: string;
  subtitle?: string;
  benefits: Array<{
    title: string;
    description: string;
  }>;
  bgColor?: string;
}

const { 
  title = "Beneficios",
  subtitle = "Descubre las ventajas que obtendrás con nuestro producto",
  benefits,
  bgColor = "var(--color-background-alt)"
} = Astro.props;
---

<section class="benefits-section" id="benefits" style={`--benefits-bg-color: ${bgColor};`}>
  <div class="landing-container">
    <div class="benefits-header">
      <h2 class="section-title animate-fade-in-up">{title}</h2>
      {subtitle && <p class="section-subtitle animate-fade-in-up delay-100">{subtitle}</p>}
    </div>
    
    <div class="benefits-grid">
      {benefits.map((benefit, index) => (
        <div class={`benefit-item animate-fade-in-up delay-${(index % 3) * 100 + 200}`}>
          <div class="benefit-check">✓</div>
          <div class="benefit-text">
            <h4 class="benefit-title">{benefit.title}</h4>
            <p class="benefit-description">{benefit.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .benefits-section {
    background-color: var(--benefits-bg-color, var(--color-background-alt));
    padding: var(--space-16) 0;
    border-radius: var(--border-radius-3xl);
    margin: var(--space-16) 0;
  }
  
  .benefits-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-10);
  }
  
  .section-title {
    font-family: var(--font-secondary);
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }
  
  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }
  
  .benefit-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-4);
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: var(--border-radius-lg);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }
  
  .benefit-item:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
    background-color: white;
  }
  
  .benefit-check {
    background-color: var(--color-primary);
    color: white;
    min-width: 28px;
    height: 28px;
    border-radius: var(--border-radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-top: var(--space-1);
    flex-shrink: 0;
  }
  
  .benefit-text {
    font-size: var(--font-size-base);
  }
  
  .benefit-title {
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-1);
    font-family: var(--font-secondary);
    font-size: var(--font-size-lg);
  }
  
  .benefit-description {
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  /* Animaciones */
  .animate-fade-in-up {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .animate-fade-in-up.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  .delay-100 { transition-delay: 100ms; }
  .delay-200 { transition-delay: 200ms; }
  .delay-300 { transition-delay: 300ms; }
  .delay-400 { transition-delay: 400ms; }
  
  /* Responsive */
  @media (max-width: 768px) {
    .benefits-grid {
      grid-template-columns: 1fr;
    }
    
    .section-title {
      font-size: var(--font-size-2xl);
    }
    
    .benefits-section {
      border-radius: var(--border-radius-2xl);
      margin: var(--space-10) 0;
    }
  }
</style>