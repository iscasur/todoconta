---
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  subtitle: string;
  badge?: string;
  primaryCta: {
    text: string;
    url: string;
  };
  secondaryCta?: {
    text: string;
    url: string;
  };
  image?: string;
}

const {
  title,
  subtitle,
  badge,
  primaryCta,
  secondaryCta,
  image = 'https://placehold.co/800x450/14b8a6/FFFFFF/png?text=Product+Image',
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      {badge && <span class="product-badge animate-fade-in-up">{badge}</span>}
      <h1 class="hero-title animate-fade-in-up delay-100">{title}</h1>
      <p class="hero-subtitle animate-fade-in-up delay-200">{subtitle}</p>
      <div class="hero-buttons animate-fade-in-up delay-300">
        <Button href={primaryCta.url} variant="accent">{primaryCta.text}</Button>
        {
          secondaryCta && (
            <Button href={secondaryCta.url} variant="outline">
              {secondaryCta.text}
            </Button>
          )
        }
      </div>
    </div>
    <div class="hero-image-container animate-fade-in-up delay-400">
      <img src={image} alt="VisualizaciÃ³n del producto" class="hero-image" />
    </div>
  </div>
</section>
