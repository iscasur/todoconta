---
export interface Props {
  title: string;
  subtitle: string;
  badge?: string;
  primaryCta: {
    text: string;
    url: string;
  };
  secondaryCta?: {
    text: string;
    url: string;
  };
  image?: string;
}

const {
  title,
  subtitle,
  badge,
  primaryCta,
  secondaryCta,
  image = 'https://placehold.co/800x450/3D405B/FFFFFF/png?text=Product+Image',
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      {badge && <span class="product-badge animate-fade-in-up">{badge}</span>}
      <h1 class="hero-title animate-fade-in-up delay-100">{title}</h1>
      <p class="hero-subtitle animate-fade-in-up delay-200">{subtitle}</p>
      <div class="hero-buttons animate-fade-in-up delay-300">
        <a href={primaryCta.url} class="btn btn-accent">{primaryCta.text}</a>
        {
          secondaryCta && (
            <a href={secondaryCta.url} class="btn btn-outline">
              {secondaryCta.text}
            </a>
          )
        }
      </div>
    </div>
    <div class="hero-image-container animate-fade-in-up delay-400">
      <img src={image} alt="VisualizaciÃ³n del producto" class="hero-image" />
    </div>
  </div>
</section>