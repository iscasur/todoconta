---
// src/layouts/ServiceLayout.astro
export interface Props {
  title: string;
  description: string;
  keywords?: string[];
  ogImage?: string;
}

const { 
  title, 
  description, 
  keywords = [],
  ogImage = "/images/og-default.jpg"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Todoconta</title>
    <meta name="description" content={description} />
    
    <!-- Keywords -->
    {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.url)} />
    
    <!-- Estructura JSON-LD para SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "${title.replace(/"/g, '\\"')}",
        "description": "${description.replace(/"/g, '\\"')}",
        "provider": {
          "@type": "Organization",
          "name": "Todoconta"
        }
      }
    </script>
  </head>
  <body>
    <!-- Navbar (puedes incluir tu componente Navbar aquí) -->
    <header class="site-header">
      <div class="container">
        <div class="header-content">
          <div class="logo">
            <a href="/">
              <img src="/images/logo.svg" alt="Todoconta" width="150" height="40">
            </a>
          </div>
          <nav class="main-nav">
            <ul>
              <li><a href="/servicios">Servicios</a></li>
              <li><a href="/tienda">Productos</a></li>
              <li><a href="/info">Recursos</a></li>
              <li><a href="/contacto">Contacto</a></li>
            </ul>
          </nav>
          <div class="header-actions">
            <a href="/contacto" class="contact-button">Cotizar Servicio</a>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Breadcrumbs -->
    <div class="breadcrumbs-container">
      <div class="container">
        <nav class="breadcrumbs" aria-label="Breadcrumbs">
          <ol>
            <li><a href="/">Inicio</a></li>
            <li><a href="/servicios">Servicios</a></li>
            <li aria-current="page">{title}</li>
          </ol>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <main>
      <slot />
    </main>
    
    <!-- Footer (puedes incluir tu componente Footer aquí) -->
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-logo">
            <img src="/images/logo-white.svg" alt="Todoconta" width="150" height="40">
            <p>Servicios contables y fiscales profesionales</p>
          </div>
          <div class="footer-links">
            <div class="footer-column">
              <h3>Servicios</h3>
              <ul>
                <li><a href="/servicio/plan-basico">Plan Básico</a></li>
                <li><a href="/servicio/plan-premium">Plan Premium</a></li>
                <li><a href="/servicio/plan-empresarial">Plan Empresarial</a></li>
              </ul>
            </div>
            <div class="footer-column">
              <h3>Productos</h3>
              <ul>
                <li><a href="/landing/xmlsat-premium">XMLSAT Premium</a></li>
                <li><a href="/landing/control-xml-cfdi">Control XML-CFDI</a></li>
                <li><a href="/tienda">Ver todos</a></li>
              </ul>
            </div>
            <div class="footer-column">
              <h3>Información</h3>
              <ul>
                <li><a href="/info">Centro de Recursos</a></li>
                <li><a href="/contacto">Contacto</a></li>
                <li><a href="/privacidad">Aviso de Privacidad</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} Todoconta. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* Variables del design system */
  :root {
    /* Primary Brand Colors */
    --primary-50: #f0f9ff;
    --primary-100: #e0f2fe;
    --primary-200: #bae6fd;
    --primary-300: #7dd3fc;
    --primary-400: #38bdf8;
    --primary-500: #0ea5e9;
    --primary-600: #0284c7;
    --primary-700: #0369a1;
    --primary-800: #075985;
    --primary-900: #0c4a6e;

    /* Green Financial */
    --green-50: #f0fdf4;
    --green-100: #dcfce7;
    --green-200: #bbf7d0;
    --green-300: #86efac;
    --green-400: #4ade80;
    --green-500: #22c55e;
    --green-600: #16a34a;
    --green-700: #15803d;
    --green-800: #166534;
    --green-900: #14532d;

    /* Orange Energetic */
    --orange-50: #fff7ed;
    --orange-100: #ffedd5;
    --orange-200: #fed7aa;
    --orange-300: #fdba74;
    --orange-400: #fb923c;
    --orange-500: #f97316;
    --orange-600: #ea580c;
    --orange-700: #c2410c;
    --orange-800: #9a3412;
    --orange-900: #7c2d12;

    /* Warm Neutrals */
    --neutral-50: #fafaf9;
    --neutral-100: #f5f5f4;
    --neutral-200: #e7e5e4;
    --neutral-300: #d6d3d1;
    --neutral-400: #a8a29e;
    --neutral-500: #78716c;
    --neutral-600: #57534e;
    --neutral-700: #44403c;
    --neutral-800: #292524;
    --neutral-900: #1c1917;
    
    /* Spacing System */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    --space-20: 5rem;
    --space-24: 6rem;
    --space-32: 8rem;

    /* Typography */
    --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-display: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    --font-size-4xl: 2.25rem;
    --font-size-5xl: 3rem;
    --font-size-6xl: 3.75rem;
    
    /* Border Radius */
    --border-radius-sm: 0.25rem;
    --border-radius-md: 0.375rem;
    --border-radius-lg: 0.5rem;
    --border-radius-xl: 0.75rem;
    --border-radius-2xl: 1rem;
    --border-radius-3xl: 1.5rem;
    --border-radius-full: 9999px;
    
    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-normal: 250ms ease;
    --transition-slow: 350ms ease;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  /* Reset & Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-primary);
    color: var(--neutral-700);
    background-color: white;
    line-height: 1.5;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  a {
    color: var(--primary-600);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  a:hover {
    color: var(--primary-700);
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    color: var(--neutral-900);
    margin-bottom: 0.5em;
  }

  p {
    margin-bottom: 1em;
  }

  ul, ol {
    margin-bottom: 1em;
    padding-left: 1.5em;
  }

  /* Container */
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  /* Animaciones */
  .animate-fade-in-up {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .animate-fade-in-up.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  .delay-100 { transition-delay: 100ms; }
  .delay-200 { transition-delay: 200ms; }
  .delay-300 { transition-delay: 300ms; }
  .delay-400 { transition-delay: 400ms; }

  /* Utility classes */
  .text-center {
    text-align: center;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: var(--space-4);
  }
  
  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--neutral-600);
    max-width: 700px;
    margin-bottom: var(--space-8);
  }
</style>

<style>
  /* Header */
  .site-header {
    background-color: white;
    box-shadow: var(--shadow-sm);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: var(--space-4) 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo img {
    height: 40px;
    width: auto;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    gap: var(--space-6);
    padding: 0;
    margin: 0;
  }

  .main-nav a {
    color: var(--neutral-700);
    font-weight: 500;
    font-size: var(--font-size-base);
    transition: color var(--transition-normal);
  }

  .main-nav a:hover {
    color: var(--primary-600);
  }

  .contact-button {
    background-color: var(--primary-600);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius-lg);
    font-weight: 500;
    transition: background-color var(--transition-normal);
  }

  .contact-button:hover {
    background-color: var(--primary-700);
    color: white;
  }

  /* Breadcrumbs */
  .breadcrumbs-container {
    background-color: var(--neutral-100);
    padding: var(--space-4) 0;
    border-bottom: 1px solid var(--neutral-200);
  }
  
  .breadcrumbs ol {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }
  
  .breadcrumbs li {
    display: flex;
    align-items: center;
    color: var(--neutral-600);
    font-size: var(--font-size-sm);
  }
  
  .breadcrumbs li:not(:last-child)::after {
    content: '/';
    margin: 0 var(--space-2);
    color: var(--neutral-400);
  }
  
  .breadcrumbs a {
    color: var(--primary-600);
    text-decoration: none;
    transition: color var(--transition-normal);
  }
  
  .breadcrumbs a:hover {
    color: var(--primary-700);
    text-decoration: underline;
  }
  
  .breadcrumbs li[aria-current="page"] {
    color: var(--neutral-700);
    font-weight: 500;
  }
  
  /* Main content */
  main {
    min-height: 70vh;
    padding-bottom: var(--space-16);
  }

  /* Footer */
  .site-footer {
    background-color: var(--neutral-900);
    color: white;
    padding: var(--space-16) 0 var(--space-8);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr repeat(3, 1fr);
    gap: var(--space-8);
    margin-bottom: var(--space-8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: var(--space-8);
  }

  .footer-logo img {
    height: 40px;
    width: auto;
    margin-bottom: var(--space-4);
  }

  .footer-logo p {
    color: var(--neutral-400);
    font-size: var(--font-size-sm);
  }

  .footer-column h3 {
    font-size: var(--font-size-base);
    font-weight: 600;
    margin-bottom: var(--space-4);
    color: white;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: var(--space-2);
  }

  .footer-column a {
    color: var(--neutral-400);
    font-size: var(--font-size-sm);
    transition: color var(--transition-normal);
  }

  .footer-column a:hover {
    color: white;
  }

  .footer-bottom {
    text-align: center;
    color: var(--neutral-500);
    font-size: var(--font-size-sm);
  }

  /* Responsive */
  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8) var(--space-4);
    }

    .footer-logo {
      grid-column: 1 / -1;
      text-align: center;
      margin-bottom: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: var(--space-4);
    }

    .main-nav ul {
      gap: var(--space-4);
    }

    .main-nav a {
      font-size: var(--font-size-sm);
    }

    .breadcrumbs {
      font-size: var(--font-size-xs);
    }

    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-column ul {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--space-4);
    }
  }
</style>