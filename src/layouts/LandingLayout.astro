---
// src/layouts/LandingLayout.astro
export interface Props {
  title: string;
  description: string;
  keywords?: string[];
  ogImage?: string;
}

const { 
  title, 
  description, 
  keywords = [],
  ogImage = "/images/og-default.jpg"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Keywords -->
    {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.url)} />
    
    <!-- Importar estilos del design system -->
    <style is:global>
      /* Variables del design system */
      :root {
          /* Primary Brand Colors */
          --color-background-alt: #f0f9ff;
          --color-primary-light: #e0f2fe;
          --primary-200: #bae6fd;
          --primary-300: #7dd3fc;
          --primary-400: #38bdf8;
          --color-border-light: #0ea5e9;
          --color-primary: #0284c7;
          --primary-700: #0369a1;
          --primary-800: #075985;
          --primary-900: #0c4a6e;

          /* Green Financial */
          --color-primary-light: #f0fdf4;
          --green-100: #dcfce7;
          --green-200: #bbf7d0;
          --green-300: #86efac;
          --green-400: #4ade80;
          --color-primary: #22c55e;
          --green-600: #16a34a;
          --green-700: #15803d;
          --green-800: #166534;
          --green-900: #14532d;

          /* Orange Energetic */
          --orange-50: #fff7ed;
          --orange-100: #ffedd5;
          --color-primary: #fed7aa;
          --orange-300: #fdba74;
          --orange-400: #fb923c;
          --orange-500: #f97316;
          --color-primary: #ea580c;
          --orange-700: #c2410c;
          --orange-800: #9a3412;
          --orange-900: #7c2d12;

          /* Warm Neutrals */
          --color-white: #fafaf9;
          --neutral-100: #f5f5f4;
          --color-primary-light: #e7e5e4;
          --neutral-300: #d6d3d1;
          --neutral-400: #a8a29e;
          --color-white: #78716c;
          --color-text-secondary: #57534e;
          --color-text-primary: #44403c;
          --neutral-800: #292524;
          --color-text-primary: #1c1917;
          
          /* Spacing System */
          --space-1: 0.25rem;
          --space-2: 0.5rem;
          --space-3: 0.75rem;
          --space-4: 1rem;
          --space-5: 1.25rem;
          --space-6: 1.5rem;
          --space-8: 2rem;
          --space-10: 2.5rem;
          --space-12: 3rem;
          --space-16: 4rem;
          --space-20: 5rem;
          --space-24: 6rem;
          --space-32: 8rem;

          /* Typography */
          --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
          --font-secondary: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
          
          --font-size-xs: 0.75rem;
          --font-size-sm: 0.875rem;
          --font-size-base: 1rem;
          --font-size-lg: 1.125rem;
          --font-size-xl: 1.25rem;
          --font-size-2xl: 1.5rem;
          --font-size-3xl: 1.875rem;
          --font-size-4xl: 2.25rem;
          --font-size-5xl: 3rem;
          --font-size-6xl: 3.75rem;
          
          /* Border Radius */
          --border-radius-sm: 0.25rem;
          --border-radius-md: 0.375rem;
          --border-radius-lg: 0.5rem;
          --border-radius-xl: 0.75rem;
          --border-radius-2xl: 1rem;
          --border-radius-3xl: 1.5rem;
          --border-radius-full: 9999px;
          
          /* Transitions */
          --transition-fast: 150ms ease;
          --transition-normal: 250ms ease;
          --transition-slow: 350ms ease;
          
          /* Shadows */
          --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
          --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
          --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
          --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
          
          /* Colors */
          --color-background: #ffffff;
          --bg-secondary: var(--color-white);
          --text-primary: var(--color-text-primary);
          --text-secondary: var(--color-text-secondary);
      }

      /* Reset básico */
      *, *::before, *::after {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
      }

      html, body {
          font-family: var(--font-primary);
          font-size: 16px;
          line-height: 1.5;
          color: var(--text-primary);
          background-color: var(--color-background);
      }

      img {
          max-width: 100%;
          height: auto;
      }

      a {
          color: var(--color-primary);
          text-decoration: none;
      }

      h1, h2, h3, h4, h5, h6 {
          font-family: var(--font-secondary);
          font-weight: 700;
          line-height: 1.2;
          margin-bottom: 0.5em;
      }

      p {
          margin-bottom: 1em;
      }

      /* Utility classes */
      .text-center {
          text-align: center;
      }
    </style>
    
    <!-- Estructura JSON-LD para SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Product",
        "name": "${title.replace(/"/g, '\\"')}",
        "description": "${description.replace(/"/g, '\\"')}",
        "brand": {
          "@type": "Brand",
          "name": "Todoconta"
        },
        "offers": {
          "@type": "Offer",
          "priceCurrency": "MXN",
          "availability": "https://schema.org/InStock"
        }
      }
    </script>
  </head>
  <body>
    <!-- Floating Home Link -->
    <div class="floating-home-link">
      <a href="/" title="Volver a Todoconta">
        <img src="/images/logo-icon.svg" alt="Todoconta" width="32" height="32">
      </a>
    </div>
    
    <!-- Main Content -->
    <main>
      <slot />
    </main>
    
    <!-- Minimal Footer -->
    <div class="minimal-footer">
      <p>&copy; {new Date().getFullYear()} Todoconta. Todos los derechos reservados.</p>
      <div class="footer-links">
        <a href="/privacidad">Privacidad</a>
        <a href="/terminos">Términos</a>
        <a href="/contacto">Contacto</a>
      </div>
    </div>
    
    <!-- Script para animaciones y funcionalidad -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Smooth scroll para enlaces de anclaje
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            const targetElement = document.querySelector(targetId);
            
            if (targetElement) {
              window.scrollTo({
                top: targetElement.offsetTop,
                behavior: 'smooth'
              });
            }
          });
        });

        // Inicializar animaciones
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        });

        document.querySelectorAll('.animate-fade-in-up')
          .forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>

<style>
  .floating-home-link {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background-color: white;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }
  
  .floating-home-link:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }
  
  .minimal-footer {
    padding: var(--space-6) 0;
    background-color: var(--neutral-100);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--color-white);
  }
  
  .footer-links {
    margin-top: var(--space-2);
    display: flex;
    justify-content: center;
    gap: var(--space-4);
  }
  
  .footer-links a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-normal);
  }
  
  .footer-links a:hover {
    color: var(--primary-700);
    text-decoration: underline;
  }
  
  /* Estilos comunes para landing pages */
  .landing-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }
  
  @media (max-width: 768px) {
    .floating-home-link {
      top: 10px;
      left: 10px;
      width: 36px;
      height: 36px;
    }
  }
</style>